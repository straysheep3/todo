<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col-md-4 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @todo_list.title %></h3>
      </div>
      <div class="panel-body">
        <%= @todo_list.descriptin %>
      </div>
      <div class="panel-footer">
        <%= render @todo_list.todo_items %>
        <%= render "todo_items/form" %>
      </div>
      <hr>
      <div class="panel-footer text-center">
        <div class="btn-group btn-group-sm">
          <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: "btn btn-warning" %>
          <%= link_to "Delete", todo_list_path(@todo_list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"  %>
          <%= link_to 'Back', todo_lists_path, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
</div>
